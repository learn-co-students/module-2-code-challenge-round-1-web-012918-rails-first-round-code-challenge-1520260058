<h1>Create Super Hero:</h1>

<% if @superhero.errors.any? %>
  <p><%= pluralize(@superhero.errors.count, "error") %> prevented this superhero from being saved.</p>
  <ul>
    <% @superhero.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @superhero do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :super_name %><br>
<%= f.text_field :super_name %><br>
<%= f.label :superpower %><br>
<%= f.collection_select :superpower_id, Superpower.all, :id, :name, :prompt => "Please Select" %><br>
<%= f.submit %>
<% end %>
