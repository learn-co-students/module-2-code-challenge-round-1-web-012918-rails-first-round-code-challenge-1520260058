<h2>All Superheroes</h2>


<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for superpowers:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to superhero.super_name, superhero_path(superhero), method: :get %>
    </li>
    <br>
  <% end %>
</ul>
