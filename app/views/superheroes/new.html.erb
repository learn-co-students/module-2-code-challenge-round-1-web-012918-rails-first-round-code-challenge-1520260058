	<% if flash[:error] %>
	  <% flash[:error].each do |err| %>
	    <h4><%= err %></h4>
	  <%end%>
	<%end%>


	<h1>Create Superhero</h1>

	<%= form_for @superhero do |f| %>
	<br><%= f.label :name %></br>
	<%= f.text_field :name, placeholder: "Superhero Name" %>
	<br><%= f.label :super_name %>
	<%= f.text_field :super_name, placeholder: "Super Name" %></br>
<br><%= f.label :superpower, "Choose a Power" %></br>
	<%= f.collection_select(:superpower_id, @superpowers, :id, :name) %><p></p>
	<br><%= f.submit %></br>
	<br><%= link_to "Go Back To All Superheroes", superheroes_path %></br>
	<% end %>
