<h2>All Superheroes</h2>


<%= form_tag("/filter", method: "get") do %>
  <%= label_tag(:q, "Superpower Search:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to "#{superhero.super_name}", superhero_path(superhero) %>
    </li>
    <br>
  <% end %>
</ul>
