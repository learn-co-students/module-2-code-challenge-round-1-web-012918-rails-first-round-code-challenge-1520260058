<% if @superpower.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@superpower.errors.count, "error") %>
      prohibited this superpower from being saved:
    </h2>

    <ul>
    <% @superpower.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @superpower do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.submit %>
<% end %>
